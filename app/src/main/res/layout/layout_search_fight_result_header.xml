<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_border_fill_gray_main_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llPass2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_non_focus_left"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPass2Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thứ 5" />

            <TextView
                android:id="@+id/tvPass2Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/04"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPass1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/bg_non_focus_center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPass1Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thứ 5" />

            <TextView
                android:id="@+id/tvPass1Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/04"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCurrent"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/bg_focus_center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCurrentDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thứ 5"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/04"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNext1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_non_focus_center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNext1Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thứ 5" />

            <TextView
                android:id="@+id/tvNext1Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/04"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNext2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_non_focus_right"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNext2Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thứ 6" />

            <TextView
                android:id="@+id/tvNext2Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/05"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_border_fill_trans"
        android:orientation="horizontal" />


</RelativeLayout>
