            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tvTimeGoTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu 2, 11/01/2016 - Thu 6, 16/01/2016"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>
