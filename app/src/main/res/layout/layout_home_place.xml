<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fff">

        <TextView
            android:id="@+id/placeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/place_from" />


        <RelativeLayout
            android:id="@+id/rlPlaceFrom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/placeFrom"
            android:layout_marginTop="5dp"
            android:background="#ebedec">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvPlaceFromCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="SGN"
                    android:textColor="@color/homeTextColor"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlaceFromName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPlaceFromCode"
                    android:layout_centerHorizontal="true"
                    android:text="Ho Chi Minh City"
                    android:textColor="@color/homeTextColor"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff">

        <TextView
            android:id="@+id/none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_below="@+id/none"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_airplane_go" />

            <ImageView
                android:id="@+id/imgFightBack"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_airplane_back"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fff">

        <TextView
            android:id="@+id/placeTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/place_to" />

        <RelativeLayout
            android:id="@+id/rlPlaceTo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/placeTo"
            android:layout_marginTop="5dp"
            android:background="#ebedec">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plus"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvPlaceToCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAN"
                    android:textColor="@color/homeTextColor"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlaceToName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPlaceToCode"
                    android:layout_centerHorizontal="true"
                    android:text="Ha Noi"
                    android:textColor="@color/homeTextColor"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
